<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="edu.itesm.moviequotes.fragments.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_quotesListFragment"
            app:destination="@id/quotesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/quotesListFragment"
        android:name="edu.itesm.moviequotes.fragments.QuotesListFragment"
        android:label="fragment_quotes_list"
        tools:layout="@layout/fragment_quotes_list" />
</navigation>